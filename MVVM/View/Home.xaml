<UserControl x:Class="BubblyChat.MVVM.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:BubblyChat.MVVM.ViewModel"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="730"
             d:DesignWidth="1030"
             Background="#36393f"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:HomeVM/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <Border Grid.Row="0"
                Background="#2f3136"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Welcome to Bubbly Chat"
                             Foreground="White"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Margin="0,0,0,10"/>
                    <TextBlock Text="Your modern chat platform"
                             Foreground="#B9BBBE"
                             FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                          Orientation="Horizontal"
                          VerticalAlignment="Center">
                    <RadioButton Style="{StaticResource BtnStyleNavigate}"
                               Command="{Binding ChatCommand}"
                               Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="MessageOutline"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                            <TextBlock Text="Start Chatting"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Server Status -->
                <Border Grid.Row="0"
                        Background="#2f3136"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="60"
                                Height="60"
                                CornerRadius="30"
                                Background="#7289DA"
                                Margin="0,0,20,0">
                            <Icon:PackIconMaterial Kind="ServerNetwork"
                                                 Width="30"
                                                 Height="30"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1"
                                  VerticalAlignment="Center">
                            <TextBlock Text="Server Status"
                                     Foreground="White"
                                     FontSize="20"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="All systems operational"
                                     Foreground="#43B581"
                                     FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Features Section -->
                <Border Grid.Row="1"
                        Background="#2f3136"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Features"
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,15"/>
                        <WrapPanel>
                            <Border Background="#36393f"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,15,15"
                                    Width="280">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Width="50"
                                            Height="50"
                                            CornerRadius="25"
                                            Background="#7289DA"
                                            Margin="0,0,0,15">
                                        <Icon:PackIconMaterial Kind="MessageTextOutline"
                                                             Width="25"
                                                             Height="25"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Real-time Chat"
                                                 Foreground="White"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="Chat with friends instantly with real-time messaging and file sharing"
                                                 Foreground="#B9BBBE"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Background="#36393f"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,15,15"
                                    Width="280">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Width="50"
                                            Height="50"
                                            CornerRadius="25"
                                            Background="#7289DA"
                                            Margin="0,0,0,15">
                                        <Icon:PackIconMaterial Kind="AccountGroupOutline"
                                                             Width="25"
                                                             Height="25"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Contact Management"
                                                 Foreground="White"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="Easily manage and organize your contacts with custom groups and status"
                                                 Foreground="#B9BBBE"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Background="#36393f"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,15,15"
                                    Width="280">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Width="50"
                                            Height="50"
                                            CornerRadius="25"
                                            Background="#7289DA"
                                            Margin="0,0,0,15">
                                        <Icon:PackIconMaterial Kind="ShieldCheckOutline"
                                                             Width="25"
                                                             Height="25"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="Secure Communication"
                                                 Foreground="White"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="End-to-end encryption and secure file transfers for your messages"
                                                 Foreground="#B9BBBE"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Recent Activity -->
                <Border Grid.Row="2"
                        Background="#2f3136"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Recent Activity"
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,15"/>
                        <ItemsControl>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#36393f"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="40"
                                                    Height="40"
                                                    CornerRadius="20"
                                                    Background="#7289DA"
                                                    Margin="0,0,15,0">
                                                <Icon:PackIconMaterial Kind="AccountCircle"
                                                                     Width="20"
                                                                     Height="20"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1"
                                                      VerticalAlignment="Center">
                                                <TextBlock Text="New message from John"
                                                         Foreground="White"
                                                         FontSize="14"
                                                         FontWeight="SemiBold"/>
                                                <TextBlock Text="Hey, how are you doing?"
                                                         Foreground="#B9BBBE"
                                                         FontSize="12"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2"
                                                     Text="2m ago"
                                                     Foreground="#B9BBBE"
                                                     FontSize="12"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
