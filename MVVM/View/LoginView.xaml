<Window x:Class="BubblyChat.MVVM.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubblyChat.MVVM.View"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm="clr-namespace:BubblyChat.MVVM.ViewModel" xmlns:customcontrols="clr-namespace:BubblyChat.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" 
        Height="600"
        Width="450"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">


    <Window.DataContext>
        <vm:LoginVM/>
    </Window.DataContext>

  

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>
        <Grid>



        <Border 
                CornerRadius="30 ">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Bubble.jpg"/>
            </Border.Background>

            <Border Grid.RowSpan="2"
                    CornerRadius="30 "
                    BorderThickness="3"
                    Opacity="0.85">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1 1">
                        <GradientStop Color="#CBAAFF" Offset="0"/>
                        <GradientStop Color="#B98AF3" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1 1">
                        <GradientStop Color="#060531" Offset="0"/>
                        <GradientStop Color="#1B1448" Offset="0.5"/>
                        <GradientStop Color="#FF4B6E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

            </Border>
        </Border>



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="180"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" 
                       Text="Welcome to BubblyChat!" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="10"/>
            <TextBlock Grid.Row="1"
                       Text="Sign in"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"/>
            <!--them nut dieu huong-->
            <Grid>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal" 
                            Margin="0 3 18 0">
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Height="25"
                            Width="25"
                            Margin="0 3 0 0"
                            Cursor="Hand"
                            Click="btnMinimize_Click">



                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" 
                                        Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF11C2EF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <icon:PackIconMaterial Kind="WindowMinimize"
                                               Foreground="White" 
                                               Height="10" 
                                               Width="10"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                    </Button>

                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Height="25"
                            Width="25"
                            Margin="0 3 0 0"
                            Cursor="Hand"
                            Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" 
                                        Value="#FFF54428"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF99400" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="0 9 0 0"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>



                        <icon:PackIconMaterial Kind="WindowClose"
                                               Foreground="White" 
                                               Height="10" 
                                               Width="10"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>


                    </Button>
                </StackPanel>




            </Grid>

            <Grid Grid.Row="2" 
                  Margin="10 0 0 0">
                <StackPanel Grid.Row="1"
                            Margin="0 20 0 0">
                    <TextBlock Text="Email"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="DarkGray"
                               VerticalAlignment="Center"
                               Padding="60 0 0 0"/>
                    <StackPanel Orientation="Horizontal"
                                >
                    
                    <TextBox x:Name="txtUser"
                             FontWeight="Light"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="20"
                             BorderThickness="0"
                             HorizontalContentAlignment="Left"
                             Foreground="White"
                             Background="Transparent"
                             Opacity="0.75"
                             Height="25"
                             Width="300"
                             HorizontalAlignment="Center"
                             Margin="60 0 0 0"
                             CaretBrush="White"/>
                    <icon:PackIconMaterial Kind="Email"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="White"
                                           />
                    
                    
                    </StackPanel>
                    <Border Width="315"
                            Height="2"
                            Background="White"
                            Opacity="0.5"/>

                    <TextBlock Text="Password"
                               Margin="0 20 0 0 "
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="DarkGray"
                               VerticalAlignment="Center"
                               Padding="60 0 0 0"/>
                    <StackPanel Orientation="Horizontal">

                        <customcontrols:BindablePasswordBox Password="{Binding Password,
                            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                            Margin="60 0 0 0">
                            
                        </customcontrols:BindablePasswordBox>



                        <icon:PackIconMaterial Kind="Key"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="White"
                                               />
                    </StackPanel>
                    <Border Width="315"
                            Height="2"
                            Background="White"
                            Opacity="0.5"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#D75960"
                               Margin="0 5 0 0 "
                               FontSize="12"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Padding="60 0 0 0"
                               TextWrapping="Wrap"/>

                    <Button x:Name="btnLogin"
                            Command="{Binding LoginCommand}"
                            Width="150"
                            Height="40"
                            Content="Login"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Style="{StaticResource BtnWindowManager}"
                            Margin="0 20 0 0"/>
                    <StackPanel Margin="0 10 0 0"
                                Orientation="Vertical">
                        <Button x:Name="btnSignup"
                                Command="{Binding SignUpCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Content="Sign up"
                                Cursor="Hand"
                                FontWeight="Light"
                                BorderBrush="Transparent">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"  Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="130" Height="20"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnResetPassword"
                                Content="Forgot PassWord ?"
                                Cursor="Hand"
                                FontWeight="Light"
                                BorderBrush="Transparent">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"  Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Cyan"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="130" Height="20"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>
                </StackPanel>



               
            </Grid>
        </Grid>

    </Grid>
</Window>
